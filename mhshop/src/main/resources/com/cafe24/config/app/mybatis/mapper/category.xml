<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="category">

	<!-- 카테고리 리스트 조회 -->
 	<select id="selectList" resultType="categoryvo">
	<![CDATA[
		select no, name from category order by no asc
	]]>
	</select>
	
	<!-- 카테고리 등록 -->
	<insert id="insert" parameterType="categoryvo">
		insert into category(name) values(#{name})
	</insert>
	
	<!-- 카테고리 수정 -->
	<update id="update" parameterType="categoryvo">
		update category set
		name = #{name}
		where no=#{no}
	</update>
	
	<!-- 카테고리 삭제 -->
	<delete id="delete" parameterType="long">
		delete from category where no=#{no}
	</delete>
	
	
	<!-- 카테고리 개수 -->
	<select id="countbyno" parameterType="string" resultType="Integer">
		select count(*) from category where no=#{categoryNo}
	</select>
	
	
	
	<!-- 테스트 -->
	
	
	<!-- 테스트 insert -->
	<insert id="test_insert" parameterType="categoryvo">
	<![CDATA[
		insert into category(no, name)
		values(#{no}, #{name})
	]]>
	</insert>
	
	<!-- 테스트 deleteall -->
	<delete id="test_deleteall">
		delete from category
	</delete>
	
</mapper>
